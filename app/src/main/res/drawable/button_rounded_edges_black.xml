<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <gradient android:angle="-90" android:startColor="@color/black4" android:endColor="@color/black2"  />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <solid android:color="@color/black3"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <gradient android:angle="-90" android:startColor="@color/black1" android:endColor="@color/black3" />
        </shape>
    </item>
</selector>
