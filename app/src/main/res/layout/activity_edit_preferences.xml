<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cs743.uwmparkingfinder.UI.EditPreferencesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:stretchColumns="4">
            <TableRow>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Personal Information"
                    android:id="@+id/personalInfoLabel"
                    android:gravity="center"
                    android:layout_column="1"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Username:"
                    android:id="@+id/usernameLabel"
                    android:layout_column="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/usernameTextBox"
                    android:layout_column="2" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Password:"
                    android:id="@+id/passwordLabel"
                    android:layout_column="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/passwordTextBox"
                    android:layout_column="2" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Firstname:"
                    android:id="@+id/firstNameLabel"
                    android:layout_column="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/firstNameTextBox"
                    android:layout_column="2" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Lastname:"
                    android:id="@+id/lastNameLabel"
                    android:layout_column="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/lastNameTextBox"
                    android:layout_column="2" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Phone:"
                    android:id="@+id/phoneLabel"
                    android:layout_column="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/phoneTextBox"
                    android:layout_column="2" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Email:"
                    android:id="@+id/emailLabelEdit"
                    android:layout_column="1"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/emailEditTextBox"
                    android:layout_column="2" />

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Parking Spot Preferences"
                    android:id="@+id/parkingSpotPreferencesLabel"
                    android:gravity="center"
                    android:layout_column="1"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="closer"
                    android:id="@+id/prefLabelDistEdit"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="cheaper"
                    android:id="@+id/prefLabelCostEdit"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:paddingBottom="10dp">
                <SeekBar
                    android:layout_column="1"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/costDistBarEdit"
                    android:progress="5"
                    />
            </TableRow>
            <TableRow
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Do you mind walking outside in inclement weather?"
                    android:id="@+id/badWeatherLabelEdit"
                    android:layout_column="1"/>

                <Switch
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/outsideSwitchEdit"
                    android:layout_column="2"
                    android:textOn="Yes"
                    android:textOff="No"
                    android:showText="true"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Do you require handicap parking?"
                    android:id="@+id/disableParkLabelEdit"
                    android:layout_column="1"/>

                <Switch
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/disableParkSwitchEdit"
                    android:layout_column="2"
                    android:textOn="Yes"
                    android:textOff="No"
                    android:showText="true"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Are you driving an electric car?"
                    android:id="@+id/electricParkLabelEdit"
                    android:layout_column="1"/>

                <Switch
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:id="@+id/electricParkSwitchEdit"
                    android:layout_column="2"
                    android:textOn="Yes"
                    android:textOff="No"
                    android:showText="true"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:text="Save Preferences"
                    android:id="@+id/savePreferencesButton"
                    android:layout_column="2"
                    android:onClick="savePreferences"
                    />
            </TableRow>
        </TableLayout>
    </ScrollView>
</RelativeLayout>
